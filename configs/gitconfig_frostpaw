# Include base configuration
[include]
    path = gitconfig_base

# Conditional includes based on remote URL
# NOTE: Create these files in $BASH_CONFIG_DIR/secrets/:
#   - gitconfig_user_public  (for github.com-d public account)
#   - gitconfig_user_private (for github.com-s private account)
#
# Public account using github.com-d
[includeIf "hasconfig:remote.*.url:git@github.com-d:*/**"]
    path = ../secrets/gitconfig_user_public

[includeIf "hasconfig:remote.*.url:https://github.com-d/**"]
    path = ../secrets/gitconfig_user_public

# Private account using github.com-s
[includeIf "hasconfig:remote.*.url:git@github.com-s:*/**"]
    path = ../secrets/gitconfig_user_private

[includeIf "hasconfig:remote.*.url:https://github.com-s/**"]
    path = ../secrets/gitconfig_user_private

# Include local overrides if they exist
[include]
    path = ~/.gitconfig.local
