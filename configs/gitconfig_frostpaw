[alias]
    # Status & Info
    s = status -sb
    st = status
    
    # Commit shortcuts
    c = commit
    cm = commit -m
    ca = commit --amend
    can = commit --amend --no-edit
    
    # Branch management
    b = branch
    ba = branch -a
    bd = branch -d
    bD = branch -D
    
    # Log & History
    l = log --oneline --graph --decorate
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    last = log -1 HEAD
    
    # Checkout & Switch
    co = checkout
    cob = checkout -b
    sw = switch
    swc = switch -c
    
    # Add & Stage
    a = add
    aa = add -A
    ap = add -p
    
    # Push & Pull
    p = push
    pl = pull
    pf = push --force-with-lease
    
    # Diff
    d = diff
    ds = diff --staged
    dc = diff --cached
    
    # Remote management
    r = remote -v
    ra = remote add
    rr = remote remove
    
    # Stash shortcuts
    ss = stash save
    sp = stash pop
    sl = stash list
    sd = stash drop
    
    # Rebase shortcuts
    rb = rebase
    rbi = rebase -i
    rbc = rebase --continue
    rba = rebase --abort
    
    # Utility shortcuts
    unstage = reset HEAD --
    discard = checkout --
    undo = reset --soft HEAD^
    amend = commit --amend --no-edit

[core]
    editor = vim
    autocrlf = input
    pager = less -FRX

[color]
    ui = auto

[pull]
    rebase = false

[push]
    default = current
    autoSetupRemote = true

[init]
    defaultBranch = main

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

# Conditional includes based on remote URL
# NOTE: Create these files in $BASH_CONFIG_DIR/secrets/:
#   - gitconfig_user_public  (for github.com-d public account)
#   - gitconfig_user_private (for github.com-s private account)
#
# Public account using github.com-d
[includeIf "hasconfig:remote.*.url:git@github.com-d:*/**"]
    path = ../secrets/gitconfig_user_public

[includeIf "hasconfig:remote.*.url:https://github.com-d/**"]
    path = ../secrets/gitconfig_user_public

# Private account using github.com-s
[includeIf "hasconfig:remote.*.url:git@github.com-s:*/**"]
    path = ../secrets/gitconfig_user_private

[includeIf "hasconfig:remote.*.url:https://github.com-s/**"]
    path = ../secrets/gitconfig_user_private

# Include local overrides if they exist
[include]
    path = ~/.gitconfig.local
