# Example SSH Configuration
# Copy this to 'ssh_config' (without the .example extension) and customize for your needs

# Global SSH settings
Host *
    ControlMaster auto
    ControlPath ~/.ssh/cm-%r@%h:%p
    ControlPersist 8h
    PreferredAuthentications publickey,keyboard-interactive
    GSSAPIAuthentication no
    ServerAliveInterval 30
    ServerAliveCountMax 4

# GitHub configurations for multiple accounts
Host *
    ControlMaster auto
    ControlPath ~/.ssh/cm-%r@%h:%p
    ControlPersist 8h
    PreferredAuthentications publickey,keyboard-interactive
    GSSAPIAuthentication no
    ServerAliveInterval 30
    ServerAliveCountMax 4

# GitHub configurations for multiple accounts
Host github.com-personal
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519_personal

Host github.com-work
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519_work

# Work SSH Configuration Example

# SSH Bastion (main entry point)
Host bastion
    HostName ssh.example-work.com
    User your-username
    IdentityFile ~/.ssh/id_ed25519_work
    IdentitiesOnly yes

# Direct access variants (for when on internal network)
Host workstation-direct
    HostName workstation.example-work.com
    User your-username
    IdentityFile ~/.ssh/id_ed25519_work
    IdentitiesOnly yes
    ServerAliveInterval 30
    ServerAliveCountMax 4

# Default workstation (tries direct first, then proxy)
Host workstation
    HostName workstation.example-work.com
    User your-username
    IdentityFile ~/.ssh/id_ed25519_work
    IdentitiesOnly yes
    ProxyJump bastion
    ServerAliveInterval 30
    ServerAliveCountMax 4

